<% include partials/header %>

    <div class="container" id="blogContainer">
        <div class="ui card">
            <div class="image">
                <img src="<%= blog.image %>" alt="">
            </div>
            <div class="content">
                <a class="header" href="/blogs/<%=blog._id%>">
                    <%= blog.title %>
                </a>
                </h1>
                <div class="meta">
                    <span class="date">
                        <%= blog.created.toDateString() %>
                    </span>
                </div>
                <div class="description">
                    <%= blog.body %>
                </div>
            </div>
            <form action="/blogs/<%=blog._id%>/?_method=DELETE" method="POST">
                <a class="ui basic button orange" href="/blogs/<%=blog._id%>/edit">Edit</a>                
                <button class="ui basic button red">Delete</button>
            </form>
        </div>
    </div>

    <% include partials/footer %>