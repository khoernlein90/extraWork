<% include ../partials/header %>

    <div class="container" id="new-container">
        <div class="card">
        <h1 class="text-center card-header">Edit <%= campground.name %></h1>
        <div class="form-div">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                        <textarea type="text" name="campground[description]" class="form-control"><%= campground.name %></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

    <% include ../partials/footer %>