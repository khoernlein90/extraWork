<% include ../partials/header %>

    <div class="container" id="new-container">
        <div class="card">
        <h1 class="text-center card-header">Add New Campground</h1>
        <div class="form-div">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Add Campground">
                </div>
                <div class="form-group">
                    <input type="number" name="price" class="form-control" placeholder="Price" step="1.00" min="0.00">
                </div>
                <div class="form-group">
                    <input type="text" name="image" class="form-control" placeholder="Add Image">
                </div>
                <div class="form-group">
                        <textarea type="text" name="description" class="form-control" placeholder="Description"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>

    <% include ../partials/footer %>