<% include ../partials/header %>

    <div class="container" id="new-container"> 
        <div class="card">
        <h1 class="text-center card-header">Add New Comments</h1>
        <div class="form-div">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" name="comment[author]" class="form-control" placeholder="Author">
                </div>
                <div class="form-group">
                    <textarea type="text" name="comment[text]" class="form-control" placeholder="Add Comment"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
    </div>

    <% include ../partials/footer %>