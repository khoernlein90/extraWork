<% include partials/header %>

    <div class="container" id="new-container">
        <h1 class="text-center">Add New Campground</h1>
        <div class="form-div">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Add Campground">
                </div>
                <div class="form-group">
                    <input type="text" name="image" class="form-control" placeholder="Add Image">
                </div>
                <div class="form-group">
                        <input type="text" name="description" class="form-control" placeholder="Description">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>

    <% include partials/footer %>